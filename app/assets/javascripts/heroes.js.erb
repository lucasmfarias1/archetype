let state = {
  gender: 'female',
  gear: null
}

const deleteHero = (id) => {
  const deletedHero = document.querySelector('#hero-' + id);
  deletedHero.parentNode.removeChild(deletedHero);
}

const changeBase = (gender) => {
  switch(gender) {
    case 'male':
      state.gender = 'male';
      break;
    case 'female':
      state.gender = 'female';
      break;
  }
  renderHero(state);
}

const changeGear = (gear) => {
  switch(gear) {
    case 'heavy':
      state.gear = 'heavy';
      break;
    case 'medium':
      state.gear = 'medium';
      break;
    case 'light':
      state.gear = 'light';
      break;
  }
  renderHero(state);
}

const renderHero = (state) => {
  const heroBase = document.querySelector('.hero_base');
  const heroGear = document.querySelector('.hero_gear');

  switch (state.gender) {
    case 'male':
      heroBase.src="<%= asset_data_uri 'hero/base/male.png' %>";
      break;
    case 'female':
      heroBase.src="<%= asset_data_uri 'hero/base/female.png' %>";
      break;
  }

  switch (state.gear) {
    case 'heavy':
      if (state.gender === 'male') {
        heroGear.src="<%= asset_data_uri 'hero/gear/chainmail-m.png' %>";
      } else if (state.gender === 'female') {
        heroGear.src="<%= asset_data_uri 'hero/gear/chainmail-f.png' %>";
      }
      break;
    case 'medium':
      if (state.gender === 'male') {
        heroGear.src="<%= asset_data_uri 'hero/gear/leather-m.png' %>";
      } else if (state.gender === 'female') {
        heroGear.src="<%= asset_data_uri 'hero/gear/leather-f.png' %>";
      }
      break;
    case 'light':
      if (state.gender === 'male') {
        heroGear.src="<%= asset_data_uri 'hero/gear/robe-m.png' %>";
      } else if (state.gender === 'female') {
        heroGear.src="<%= asset_data_uri 'hero/gear/robe-f.png' %>";
      }
      break;
  }
}